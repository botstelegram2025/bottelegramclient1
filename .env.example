# Railway Environment Variables Template
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration (Required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# MercadoPago Configuration (Required for payments)
MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token_here  
MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key_here

# PostgreSQL Database (Automatically provided by Railway)
DATABASE_URL=postgresql://user:password@host:port/database

# WhatsApp Service Configuration (Auto-configured)
WHATSAPP_SERVICE_URL=http://localhost:3001
WHATSAPP_PORT=3001

# Railway Configuration (Auto-configured)
NODE_ENV=production
PYTHONUNBUFFERED=1
PORT=8080

# Optional: Admin Configuration
ADMIN_USER_ID=your_telegram_user_id_for_admin_access